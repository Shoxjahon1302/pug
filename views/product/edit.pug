extends ../layout

block content
    h1= title
    p Welcome to #{title}
    h1 #{product}
    form(action=`/product/edit/${product.id}` method='POST') 
        label(for="name") Name
        input(type="text" name="name" value=product.name placeholder="Name...")
        label(for="price") Price
        input(type="number" name="price" value=product.price  placeholder="Price...")
        label(for="description") Description
        input(type="text" name="description" value=product.description placeholder="Description...")
        input(type="submit")