extends layout

block content
  p.product Welcome to #{title}
  h1 user: #{user ? user.name : "mehmon"}
    div.links
      a(href=`/product/add`) Add 
      a(href=`/admin`) AdminPanel  
  h2 Mahsulotlar 
  each car ,i in cars       
    h1 #{car.name}
    h1 #{car.image}
    h1 #{car.price}
    h1 #{car.description}
    div.links 
      a(href=`/product/add`) Add 
      a(href=`/product/${car.id}`) Edit
      a(href=`/product/delete/${car.id}`) Delete
