extends ../../layout 

block content 
    .dash-content
        .overview
            .title
                i.fa-solid.fa-gauge-simple-high
                span.text Dashboard
            .boxes
                .box.box1
                    //- i.fa-regular.fa-thumbs-up(onclick='changeColor(this)')
                    i.fa-regular.fa-thumbs-up 
                    span.text
                        | Umumiy Mahsulotlarimiz 
                        br
                    span.number
                        //- i #{productCount ? productCount : 0}
                        i #{productCount || 0}
                .box.box2
                    i.fa-regular.fa-comments
                    span.text
                        | Umumiy Comentariyalarimiz 
                        br
                    span.number
                        i.fa-solid.fa-infinity
                .box.box3
                    i.fa-solid.fa-share-from-square
                    span.text
                        | Umumiy Ulashilganlar 
                        br
                    span.number
                        i.fa-solid.fa-infinity
        .activity
            .title
                i.fa-solid.fa-clock
                span.text Recent Activity
            input.input(type='text' placeholder='Search users....')
            table#myList
